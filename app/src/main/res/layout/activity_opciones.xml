<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    tools:context="com.kytom.memorama.Pantallas.Opciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:padding="34dp"
                app:srcCompat="@drawable/logo" />

            <Button
                android:id="@+id/jugar"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@drawable/custom_button_jugar"
                android:text="Jugar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/puntajes"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@drawable/custom_button_puntajes"
                android:text="Puntajes"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/configurar"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@drawable/custom_button_configuracion"
                android:text="Configuracion"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>